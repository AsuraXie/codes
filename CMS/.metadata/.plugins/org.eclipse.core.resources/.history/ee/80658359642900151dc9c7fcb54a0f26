    <script>
    
      function test(){
    	  alert(document.getElementById("frameFile").contentDocument.body.textContent);
      }
      
      function saveall(){
    	  if($('#pwd').val()!=$('#pwd2').val())
    	  {
    		  alert("密码不一致");
    		  return;
    	  }
    	  
    	  $.ajax({
    		  url:'',
    		  success:function (data){
    			  
    		  }
    	  });
    	  $.ajax({
    		  url:'users/add',
    		  contentType: "application/x-www-form-urlencoded; charset=utf-8",  
    		  data:{
    			  name:$('#name').val(),
    			  login_name:$('#login_name').val(),
    			  pwd:$('#pwd').val(),
    			  email:$('#email').val(),
    			  address:$('#address').val(),
    			  telphone:$('#telphone').val(),
    			  maioshu:$('#miaoshu').val(),
    			  group:$('#group').val()
    		  },
    		  success:function (data){
    			  data=eval("("+data+")");
    			  layer.alert(data.message, function(index){
    				    //do something
    				    
    				    layer.close(index);
    				});
    		  }
    	  });
      }
    </script>
